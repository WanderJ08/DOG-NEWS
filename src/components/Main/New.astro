---
interface Props {
    img?: string;
    category: string;
    title?: string;
    name: string;
    date: string;
}
const { img, category, title, name, date }= Astro.props;
---

<article class="bg-white hover:scale-105 transition shadow rounded overflow-hidden flex flex-col ">
    <div class="h-52">
        <img class="h-full w-full object-cover object-center" src={img} alt={title}/>
    </div>
    <div class="p-5 space-y-3 flex-1">
        <h3 class="text-sm font-semibold text-sky-500">{category}</h3>
            <h2 class="text-xl font-semibold text-slate-800 leading-tight">{title}</h2>
        <p class="text-slate-500 hidden md:block">Lorem ipsum dolor sit amet consectetur adipisicing elit.  quia eligendi vitae cupiditate beatae minus molestiae voluptatum nihil, molestias nobis at.</p>
    </div>
    <div class="flex p-5 space-x-2">
        <img 
        class="w-10 h-10 rounded-full"
        src=`https://ui-avatars.com/api?name=${name}` alt="{name}"/>
    <div class="flex flex-col justify-center">
        <span class="text-sm font-semibold leading-4 text-slate-600">{name}</span>
        <span class="text-sm text-slate-500">{date}</span>
    </div>
</div>
</article>
